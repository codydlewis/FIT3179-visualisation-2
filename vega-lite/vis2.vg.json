{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "./data/derived/CarCrashData-Cleaned.csv"
  },
  "vconcat": [
    {
      "width": "container",
      "height": 500,
      "title": "Car Crashes in Victoria (July 2015 - June 2020)",
      "projection": {
        "type": "equirectangular"
      },
      "layer": [
        {
          "data": {
            "url": "./data/maps/4-Clean-V2.json",
            "format": {
              "type": "topojson",
              "feature": "LGA_2022_AUST_GDA2020"
            }
          },
          "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" }
        },
        {
          "transform": [{ "filter": { "param": "time_brush" } }],
          "encoding": {
            "longitude": { "field": "longitude", "type": "quantitative" },
            "latitude": { "field": "latitude", "type": "quantitative" },
            "color": {
              "field": "severity",
              "sort": [
                "Fatal accident",
                "Serious injury accident",
                "Other injury accident",
                "Non injury accident"
              ],
              "scale": {
                "range": [
                  "rgba(255, 61, 43, 0.8)",
                  "rgba(252, 148, 0, 0.8)",
                  "rgba(254, 202, 0, 0.8)",
                  "rgba(26, 131, 254, 0.8)"
                ]
              },
              "title": "Severity"
            },
            "tooltip": [
              { "field": "datetime", "type": "temporal", "title": "Time" },
              { "field": "severity", "type": "nominal", "title": "Severity" },
              { "field": "lga", "type": "nominal", "title": "LGA" },
              {
                "field": "total_persons",
                "type": "quantitative",
                "title": "Number of people"
              }
            ]
          },
          "layer": [
            { "mark": { "type": "circle", "opacity": 0.4, "size": 15 } }
          ]
        }
      ]
    },
    {
      "width": "container",
      "height": 60,
      "mark": "line",
      "title": "Use this line chart to filter out the data based on time",
      "params": [
        {
          "name": "time_brush",
          "select": { "type": "interval", "encodings": ["x"] }
        }
      ],
      "encoding": {
        "x": {
          "field": "datetime",
          "timeUnit": "yearmonth",
          "axis": { "title": "", "format": "%Y" }
        },
        "y": {
          "aggregate": "count",
          "axis": { "tickCount": 3, "grid": false },
          "title": "Count"
        }
      }
    },
    {
      "width": "container",
      "mark": "area",
      "encoding": {
        "x": {
          "field": "datetime",
          "timeUnit": "yearmonth",
          "scale": { "domain": { "param": "time_brush" } },
          "axis": { "title": "", "tickCount": 5, "grid": false }
        },
        "y": { "aggregate": "count", "title": "Count of Car Crashes" },
        "color": {
          "field": "severity",
          "sort": [
            "Fatal accident",
            "Serious injury accident",
            "Other injury accident",
            "Non injury accident"
          ],
          "scale": {
            "range": [
              "rgba(255, 61, 43, 0.8)",
              "rgba(252, 148, 0, 0.8)",
              "rgba(254, 202, 0, 0.8)",
              "rgba(26, 131, 254, 0.8)"
            ]
          },
          "legend": {
            "title": "Severity"
          }
        }
      }
    }
  ],
  "config": { "title": { "font": "sans-serif", "fontSize": 16 } }
}
